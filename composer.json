{
  "name": "auto/invest",
  "description": "Sistema automatizado de investimento em criptomoedas",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "guzzlehttp/guzzle": "^7.9",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-openssl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "": "classes/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyse classes/",
    "cs": "phpcs classes/",
    "cs-fix": "phpcbf classes/"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}